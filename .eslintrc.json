{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "next"],
	"overrides": [
		{
			"env": {
				"node": true
			},
			"files": [".eslintrc.{js,cjs}"],
			"parserOptions": {
				"sourceType": "script"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react"],
	"rules": {
		"linebreak-style": 0,
		"semi": ["error", "always"],
		"no-constant-condition": "off",
		"no-async-promise-executor": "off",
		"import/extensions": ["error", "ignorePackages"],
		"no-unused-vars": "warn",
		"prefer-const": "warn"
	}
}
